        <h1 class="text-center mb-3">posts by {{ user.username }}</h1>
    </div>
    {% include "Includes/Listing-posts.twig" with {'posts': posts} %}
    {% include "Includes/Pagination.twig" with {'pagination': pagination, 'pageUrl' :'/author/posts/'~authorId} %}
{% endblock %}

