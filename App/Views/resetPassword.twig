{% extends "Base.twig" %}

{% block title %}{% endblock %}

{% block main %}
<form id="forgot" action="/password/reset-password" method="post">
<input type="hidden" value="{{ token }}" name="token" id="token">
    <div class="row justify-content-lg-center mb-3">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="password" class="cols-sm-2 control-label">Password</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock fa-lg"
                                                                      aria-hidden="true"></i></span>
                        </div>
                        <div class="input-group-prepend" id="forgotPasswordShow">
                    <span class="input-group-text text-primary"><i class="fa fa-eye fa-lg"
                                                                   aria-hidden="true"></i></span>
                        </div>
                        <input type="password" class="form-control" name="forgotPassword" id="forgotPassword"
                               placeholder="Enter your Password"
                               aria-describedby="forgotPasswordHelpBlock" required/>

                        <small id="forgotPasswordHelpBlock" class="form-text text-danger w-100 pl-3">
                            {{ registrationErrors.forgotPassword }}
                        </small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock fa-lg"
                                                                      aria-hidden="true"></i></span>
                        </div>
                        <div class="input-group-prepend" id="forgotPasswordConfirmShow">
                    <span class="input-group-text text-primary"><i class="fa fa-eye fa-lg"
                                                                   aria-hidden="true"></i></span>
                        </div>
                        <input type="password" class="form-control" name="forgotConfirm" id="forgotConfirm"
                               placeholder="Confirm your Password" aria-describedby="forgotConfirmHelpBlock" required/>
                        <small id="forgotConfirmHelpBlock" class="form-text text-danger w-100 pl-3">
                            {{ registrationErrors.forgotConfirm }}
                        </small>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Reset Password</button>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        //adding some Jquery Validation plugin scripts to validate the register form
        $.validator.addMethod("validPassword",
            function (value, element, param) {
                if (value != "") {
                    if (value.match(/.*[A-Za-z]+.*/i) == null) {
                        return false;
                    }
                    if (value.match(/.*\d+.*/i) == null) {
                        return false;
                    }
                }

                return true;
            },
            "Must contain at least one letter and one number"
        );
        $("#forgot").validate({
            rules: {
                forgotPassword: {
                    required: true,
                    minlength: 8,
                    validPassword: true
                },
                forgotConfirm: {
                    equalTo: "#forgotPassword"
                }
            }
        });
        $("#forgotPasswordShow").click(function () {
            $("#forgotPassword").hideShowPassword('toggle');
        });

        $("#forgotPasswordConfirmShow").click(function () {
            $("#forgotConfirm").hideShowPassword('toggle');
        });

    </script>

{% endblock %}