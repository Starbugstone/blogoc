<script>
    //adding some Jquery Validation plugin scripts to validate the register form
    $.validator.addMethod("validPassword",
        function (value, element, param) {
            if (value != "") {
                if (value.match(/.*[A-Za-z]+.*/i) == null) {
                    return false;
                }
                if (value.match(/.*\d+.*/i) == null) {
                    return false;
                }
            }

            return true;
        },
        "Must contain at least one letter and one number"
    );
    $("#register").validate({
        rules: {
            name: "required",
            surname: "required",
            email: {
                required: true,
                email: true,
                remote: "/ajax/user/is-email-unique/get"
            },
            username: "required",
            password: {
                required: true,
                minlength: 8,
                validPassword: true
            },
            confirm: {
                equalTo: "#password"
            }
        },
        messages: {
            email: {
                remote: "Email is already used, do you already have an account ?"
            }
        }
    });
    $("#passwordShow").click(function () {
        $("#password").hideShowPassword('toggle');
    });

    $("#passwordConfirmShow").click(function () {
        $("#confirm").hideShowPassword('toggle');
    });

    $("#loginPasswordConfirmShow").click(function () {
        $("#loginPassword").hideShowPassword('toggle');
    });


</script>