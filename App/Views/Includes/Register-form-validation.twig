<script>
    //adding some Jquery Validation plugin scripts to validate the register form

    $("#register").validate({
        rules: {
            name: "required",
            surname: "required",
            email: {
                required: true,
                email: true,
                remote: "/ajax/user/is-email-unique/get"
            },
            username: "required",
        },
        messages: {
            email: {
                remote: "Email is already used, do you already have an account ?"
            }
        }
    });

    $("#loginPasswordConfirmShow").click(function () {
        $("#loginPassword").hideShowPassword('toggle');
    });


</script>